@model Sentinel.Models.LogonUserViewModel
           
@{ 
    Layout = null; 
}

@{
    ViewBag.Title = "Login";
}

<link href="@Url.Content("~/Content/jquery-ui-1.10.0.custom.css")" rel="stylesheet" type="text/css"/>
<link href="@Url.Content("~/Content/v1_login.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/v1_header.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Scripts/jquery-1.9.0.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-migrate-1.1.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.0.custom.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.watermark.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Views/Account.js")" type="text/javascript"></script>

<section id="top">
    <div id="div-menu">
    <table id="tbl-menu">
        <tr>
            <td id="td-menu-left">
                <img src="@Url.Content("~/Content/images/img-logo.png")" />
            </td>
        </tr>
    </table>
</div>
</section>
<section id="main">
    @using (Html.BeginForm()) {
        <div class="login-box">
            <div id="container">
                @Html.ValidationSummary(true)
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <input id="btn-submit" type="submit" value="Log On" />
            </div>
        </div>
    }
</section>