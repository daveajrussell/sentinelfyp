<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.9.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.1.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.0.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Views/Management.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.qtip.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/jquery-ui-1.10.0.custom.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/v1_master.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_header.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_monitor.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_grid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_actions.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/v1_sections.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.qtip.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ASPRazorWebGrid.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery.signalR-1.0.0-rc1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>

    <script type="text/javascript">

        $(function () {

            //Create SignalR object to get communicate with server
            var sentinelHub = $.connection.sentinelHub;
            
            // Start the connection with server
            $.connection.hub.start();
        });
    </script>

</head>
<body>
    <section id="top">
        @Html.Action("Index", "Header")
    </section>

    <section id="content">

        <section id="menu">
            @Html.Action("Index", "Menu")
        </section>

        <table>
            <tr>
                <td style="vertical-align: top">
                    <section id="main">
                        @RenderBody()
                    </section>
                </td>
                <td style="vertical-align: top">
                    <section id="updates-window">
                        @Html.Partial("RealTimeMonitorPartial")
                    </section>
                </td>
            </tr>
        </table>

    </section>
</body>
</html>
