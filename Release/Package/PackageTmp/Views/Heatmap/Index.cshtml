<script type="text/javascript">
    $(function () {

        //Create SignalR object to get communicate with server
        var realTimeHub = $.connection.sentinelHub;

        //Define a function to get 'chat messages'
        realTimeHub.getGISMessage = function (message) {
            writeEvent('message from server: ' + message, 'event-message');
        };

        // Start the connection with server
        $.connection.hub.start();

        //A function to write events to the page
        function writeEvent(eventLog, logClass) {
            var now = new Date();
            var nowStr = now.getHours() + ':' + now.getMinutes() + ':' + now.getSeconds();
            $('#events-list').prepend('<span class="' + logClass + '">' + nowStr + ': ' + eventLog + '.</span> <br />');
        }
    });

    Heatmap.Init();
</script>
